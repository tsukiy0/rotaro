{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true
  }
}
